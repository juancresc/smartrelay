description "Gunicorn application server handling {{ project_name }}"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
setuid www-data
setgid www-data
chdir {{ project_path }}

env PYTHONPATH={{ virtual_env }}/bin/python

exec {{ virtual_env }}/bin/gunicorn --workers 2 --bind 127.0.0.1:8000 {{ wsgi_module }}:application